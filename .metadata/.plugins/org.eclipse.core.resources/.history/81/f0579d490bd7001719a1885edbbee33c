package com.lanou3g.homework;

import java.util.Date;
import java.text.SimpleDateFormat;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		System.out.println("请输入用户名和密码");
		System.out.print("User:");
		String userName = new Scanner(System.in).nextLine();
		System.out.print("password:");
		String passWord = new Scanner(System.in).nextLine();
		UserInter user = Login.login(userName, passWord);
		
		if(user!=null){
			System.out.println("姓名："+userName+" 职业："+getJobByName(userName)+
					" 当前时间："+new SimpleDateFormat("yyyy-MM-dd HH-mm-ss")
					.format(new Date()));
			System.out.println("是否开始工作：1，是 2，否");
		}
		
	}
	public static String getJobByName(String userName){
		String temp=null;
		for(int i = 0; i<UserData.getUserData().length&&UserData.getUserData()[i][0].equals(userName);i++){
			temp = UserData.getUserData()[i][3];
		}
		return temp;
	}

}
